#!/bin/sh

# Based on archey3
# https://lclarkmichalek.github.io/archey3/

os="$(uname -o) $(uname -m)"
hostname="$(hostname)"
kernel="$(uname -r)"
uptime="$(uptime -p)"
packages="$(pacman -Q | wc -l)"
ram="$(free --mega | rg Mem | awk '{ print "\033[1;32m" $3 " MB\033[0m / " $2 " MB" }')"
processor="$(cat /proc/cpuinfo | rg 'model name' | uniq)"
processor="${processor:13}"
disk="$(df -h / | rg '/' | awk '{ print "\033[1;33m" $3 "\033[0m / " $2 " (" $5 ")" }')"

echo " "
echo -e "\e[34m               +                OS:\e[0m $os"
echo -e "\e[34m               #                Hostname:\e[0m $hostname"
echo -e "\e[34m              ###               Kernel Release:\e[0m $kernel"
echo -e "\e[34m             #####              Uptime:\e[0m $uptime"
echo -e "\e[34m             ######             WM:\e[0m $XDG_CURRENT_DESKTOP"
echo -e "\e[34m            ; #####;            Packages:\e[0m $packages"
echo -e "\e[34m           +##.#####            RAM:\e[0m $ram"
echo -e "\e[34m          +##########           Processor Type:\e[0m $processor"
echo -e "\e[34m         #############;         Root:\e[0m $disk"
echo -e "\e[34m        ###############+        \$EDITOR:\e[0m $EDITOR"
echo -e "\e[34m       #######   #######        \$BROWSER:\e[0m $BROWSER"
echo -e "\e[34m     .######;     ;###;\`\".    \e[0m" 
echo -e "\e[34m    .#######;     ;#####.       \e[0m"
echo -e "\e[34m    #########.   .########\`    \e[0m"
echo -e "\e[34m   ######'           '######    \e[0m"
echo -e "\e[34m  ;####                 ####;   \e[0m"
echo -e "\e[34m  ##'                     '##   \e[0m"
echo -e "\e[34m #'                         \`# \e[0m"
echo " "
