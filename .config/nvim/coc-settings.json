{
  "suggest.noselect": false,

  // prettier
  "prettier.singleQuote": true,
  "prettier.requireConfig": true,
  "prettier.eslintIntegration": true,

  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "scss",
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "graphql",
    "markdown.mdx"
  ],
  "coc.preferences.hoverTarget": "float",

  // snippets
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/snips"],

  // codelens
  "codeLens.enable": true,
  "tsserver.implicitProjectConfig.experimentalDecorators": true,
  "typescript.referencesCodeLens.enable": false,
  "javascript.referencesCodeLens.enable": false
}
