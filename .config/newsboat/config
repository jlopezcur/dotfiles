# general settings
auto-reload no
max-items 50
# ignore-mode "download" # Default: Delete them.
ignore-mode "display"    # Do not show them.

# external browser
browser "/usr/bin/qutebrowser"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# Theme
include /usr/share/doc/newsboat/contrib/colorschemes/solarized-dark

# For categories (luke smith)
highlight all "--.*--" yellow
highlight feedlist ".*(0/0))" black

highlight all "" red default
highlight all "" yellow default


